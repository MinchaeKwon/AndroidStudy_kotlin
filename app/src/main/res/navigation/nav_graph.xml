<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.androidstudy_kotlin.view.ui.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_viewFragment"
            app:destination="@id/viewFragment" />
        <action
            android:id="@+id/action_mainFragment_to_dataFragment"
            app:destination="@id/dataFragment" />
        <action
            android:id="@+id/action_mainFragment_to_roomFragment"
            app:destination="@id/roomFragment" />
        <action
            android:id="@+id/action_mainFragment_to_areaTabFragment"
            app:destination="@id/areaTabFragment" />
        <action
            android:id="@+id/action_mainFragment_to_tmapFragment"
            app:destination="@id/tmapFragment" />
        <action
            android:id="@+id/action_mainFragment_to_motionFragment"
            app:destination="@id/motionFragment" />
    </fragment>

    <fragment
        android:id="@+id/viewFragment"
        android:name="com.example.androidstudy_kotlin.view.ui.ViewFragment"
        android:label="fragment_view"
        tools:layout="@layout/fragment_view" >
        <action
            android:id="@+id/action_viewFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/dataFragment"
        android:name="com.example.androidstudy_kotlin.view.ui.DataFragment"
        android:label="fragment_data"
        tools:layout="@layout/fragment_data" >
        <action
            android:id="@+id/action_dataFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/roomFragment"
        android:name="com.example.androidstudy_kotlin.view.ui.RoomFragment"
        android:label="fragment_room"
        tools:layout="@layout/fragment_room" >
        <action
            android:id="@+id/action_roomFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <!-- 데이터를 받는 fragment에서 argument를 추가해야 함 -->
    <fragment
        android:id="@+id/areaTabFragment"
        android:name="com.example.androidstudy_kotlin.view.ui.AreaTabFragment"
        android:label="fragment_area_tab"
        tools:layout="@layout/fragment_area_tab">
        <argument
            android:name="region"
            android:defaultValue="@null"
            app:argType="com.example.androidstudy_kotlin.data.model.Region"
            app:nullable="true" />
        <action
            android:id="@+id/action_areaTabFragment_self"
            app:destination="@id/areaTabFragment"
            app:popUpTo="@id/areaTabFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_areaTabFragment_to_areaDetailFragment"
            app:destination="@id/areaDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/areaDetailFragment"
        android:name="com.example.androidstudy_kotlin.view.ui.TripDetailFragment"
        android:label="fragment_area_detail"
        tools:layout="@layout/fragment_trip_detail">
        <argument
            android:name="contentId"
            app:argType="integer" />
        <argument
            android:name="contentTypeId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/tmapFragment"
        android:name="com.example.androidstudy_kotlin.view.ui.TmapFragment"
        android:label="fragment_tmap"
        tools:layout="@layout/fragment_tmap" />
    <fragment
        android:id="@+id/motionFragment"
        android:name="com.example.androidstudy_kotlin.view.ui.MotionFragment"
        android:label="fragment_motion"
        tools:layout="@layout/fragment_motion" />
    <fragment
        android:id="@+id/practiceFragment"
        android:name="com.example.androidstudy_kotlin.view.ui.PracticeFragment"
        android:label="fragment_practice"
        tools:layout="@layout/fragment_practice" />
</navigation>